import java.util.*;

public class Main {

    static int sumByD(int[] arr, int div) {
        int sum = 0;

        for (int num : arr) {
            // ceil(num / div) without floating point
            sum += (num + div - 1) / div;
        }
        return sum;
    }

    static int smallestDivisor(int[] arr, int limit) {
        int n = arr.length;
        if (n > limit) return -1;

        int low = 1;
        int high = 0;

        // find max element
        for (int num : arr) {
            high = Math.max(high, num);
        }

        // binary search
        while (low <= high) {
            int mid = (low + high) / 2;

            if (sumByD(arr, mid) <= limit) {
                high = mid - 1;
            } else {
                low = mid + 1;
            }
        }

        return low;
    }

    public static void main(String[] args) {
        int[] arr = {1, 2, 3, 4, 5};
        int limit = 8;

        int ans = smallestDivisor(arr, limit);
        System.out.println("The minimum divisor is: " + ans);
    }
}